@model IEnumerable<MyASPProject.Models.SamuraiWithQuote>

@{
    ViewData["Title"] = "Index";
}

<h1>Samurai With Quote</h1>

<ol class="breadcrumb mb-4">
    <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
    <li class="breadcrumb-item active">Daftar Role</li>
</ol>


<a class="btn btn-primary" asp-action="Create">Create New</a>
@if (ViewData["pesan"] != null)
{
    @Html.Raw(ViewData["pesan"])
}
<table class="table table-striped">

    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Quotes)
        </th>
        <th></th>
    </tr>

    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @foreach (var quote in item.Quotes)
                    {
                        @quote.Text
                    }

                </td>
                <td>
                    @*<a class="btn btn-success" asp-action="Update" asp-route-id="@item.Id">Update</a> &nbsp;
                <a class="btn btn-warning" asp-action="Details" asp-route-id="@item.Id">Details</a> &nbsp;
                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</a> *@
                </td>
            </tr>
        }
    </tbody>
</table>
