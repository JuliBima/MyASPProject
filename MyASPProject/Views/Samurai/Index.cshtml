
@model IEnumerable<MyASPProject.Models.Samurai>

@{
    ViewData["Title"] = "Index";
}

<h1>Samurai API</h1>

<ol class="breadcrumb mb-4">
    <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
    <li class="breadcrumb-item active">Daftar Role</li>
</ol>


    <a class="btn btn-primary" asp-action="Create">Create New</a>
    
    <p>
        <form asp-action="Index" method="get">
            Masukan Nama
            <input name="Name" type="text" placeholder="Masukan Nama" />
            <input type="submit" value="Submit" class="btn btn-primary" />
        </form>
    </p>
    
    
    @if (ViewData["pesan"] != null)
            {
                @Html.Raw(ViewData["pesan"])
            }
<table class="table table-striped">
    
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            
            <th></th>
        </tr>
    
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            
            <td>
                <a class="btn btn-success" asp-action="Update" asp-route-id="@item.Id">Update</a> &nbsp;
                <a class="btn btn-warning" asp-action="Details" asp-route-id="@item.Id">Details</a> &nbsp;
                <a class="btn btn-danger " asp-action="Delete" asp-route-id="@item.Id">delete</a>
                               
            </td>
        </tr>
}
    </tbody>
</table>
